package javaBasic.ch04.sec01;

public class While문 {

	public static void main(String[] args) {
		// 반복문
		// 형식 while(조건) {참이면 수행할 문장}
		// 1~100 출력하기
		// 숫자변수 만들어 1 출력하기 -> 변수 + 1 -> 출력
		// 1 2 3
		int number=1;
		System.out.println(number);
		
		while(number<100) { //1~100까지면 참이 되게 코드 작성
		number++;
		System.out.println(number);
		}
		
		// 10 20 30 40 ... 100
		int number1=10;
		while(number1<=100) {
		System.out.println(number1);
		number1 +=10;
		}
		
		//100 90 80 ... -10 -20
		int number2=100;
		while(number2>-30) {
		System.out.println(number2);
		number2 -= 10;
		}
		
		// 5의 배수를 빼고 찍기
		// 1 2 3 4 6 7 8 9 11 12 13 14 16 17 18 19
		
		// 1~20까지 출력하기
		int number3=1;
		while(number3<=20) {
			if(number3 %5 ==0) { continue;};
			// continue는 반복문을 계속해라 단, 아래 문장은 건너뛰어라
			else {System.out.println(number3);}
			number3 ++;
		}
	}
}	    
        


