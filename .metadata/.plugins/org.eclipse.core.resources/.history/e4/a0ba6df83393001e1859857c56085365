package javaBasic.ch04.sec01;

public class If문 {

	public static void main(String[] args) {
		// 만약에 조건이 참이면 거짓이면
		// 90~100 "A" 89~80 "B"
		int score =87;
		if(score>=90) {
			System.out.println("A");
		};
		if(80<= score && score <=89) {
		    System.out.println("B");
		};
		if(78<=score && score <=79) {
			System.out.println("C");
		};
		
		// a>=10 이고 b<=20 이거나 c==20이면 합격 출력하기
		int a=20, b=10, c= 20;
		
		if(a>=10 && b<=20 || c==20) {
			System.out.println("합격");
		};
		

	}

}
